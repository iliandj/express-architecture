extends ../shared/layout
block main-content
  .container
    .row.col-md-offset-5
      h1 Log In
      form.col-md-4(method="post" action="/users/authenticate")
        div.form-group
          label.control-label(for="username") Username
          input.form-control(type="text" name="username" id="username" required)
        div.form-group
          label(for="password") Password
          input.form-control(type="password" name="password" id="password" required)
        button.btn.btn-default(type="submit") Log In